# Yarnnn Agent Deployment Service - Environment Configuration

# =============================================================================
# Anthropic API Configuration
# =============================================================================
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your_key_here

# =============================================================================
# Yarnnn Service Configuration
# =============================================================================
# Yarnnn main service API endpoint
YARNNN_API_URL=https://api.yarnnn.com

# Yarnnn API key (get from Yarnnn dashboard)
YARNNN_API_KEY=ynk_your_key_here

# Yarnnn workspace ID
YARNNN_WORKSPACE_ID=ws_your_workspace_id

# =============================================================================
# Agent-Specific Basket IDs
# =============================================================================
# Each agent stores its data in a dedicated Yarnnn basket

# Research agent basket
RESEARCH_BASKET_ID=basket_research_prod

# Content creator agent basket (configure when ready)
# CONTENT_BASKET_ID=basket_content_prod

# Reporting agent basket (configure when ready)
# REPORTING_BASKET_ID=basket_reporting_prod

# =============================================================================
# API Service Configuration
# =============================================================================
# Port for FastAPI service (default: 8000)
PORT=8000

# Environment (production, staging, local)
ENVIRONMENT=production

# =============================================================================
# Optional: Monitoring & Observability
# =============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Optional: Feature Flags
# =============================================================================
# Enable/disable agents (useful for gradual rollout)
ENABLE_RESEARCH_AGENT=true
ENABLE_CONTENT_AGENT=false
ENABLE_REPORTING_AGENT=false
